{
  "name": "Ask ChatGPT",
  "version": "1.1",
  "description": "Select text on the page and send it to ChatGPT",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Send to ChatGPT"
  },
  "background": {
    "service_worker": "background.js"
  }
}
